<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaseDatosInterna.Views.NuevoProductoPage"
             Title="NuevoProductoPage">
    <VerticalStackLayout>
        <Image
            Source="data:image/png;base64,"
            HeightRequest="50"
            HorizontalOptions="Fill" BackgroundColor="Black"/>

        <HorizontalStackLayout HorizontalOptions="Center">

            <Label 
                FontAttributes="Bold"
                Text="Agregar Producto"
                FontSize="30"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                TextColor="DarkCyan"/>
        </HorizontalStackLayout>
        <TableView>
            <TableRoot>
                <TableSection Title="Ingrese los datos para un nuevo producto:" TextColor="DarkCyan"  >
                    <EntryCell x:Name="Nombre"
                               Text="{Binding Nombre}"
                           Placeholder="Nombre"/>
                    <EntryCell x:Name="Cantidad"
                               Text="{Binding Cantidad}"
                           Placeholder="Cantidad"
                           />
                    <EntryCell x:Name="Descripcion"
                               Text="{Binding Descripcion}"
                           Placeholder="Descripcion"/>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Guardar Producto"
            Command="{Binding GuardarProducto}" BackgroundColor="DarkCyan"
            />

    </VerticalStackLayout>
</ContentPage>