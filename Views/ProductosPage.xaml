<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaseDatosInterna.Views.ProductosPage"
             Title="ProductosPage">
    <VerticalStackLayout>
        <Image
    Source="data:image/png;base64,"
    HeightRequest="50"
    HorizontalOptions="Fill" BackgroundColor="Black"/>

        <HorizontalStackLayout HorizontalOptions="Center">

            <Label 
                 FontAttributes="Bold"
                 Text="Productos"
                 FontSize="30"
                 VerticalOptions="Center" 
                 HorizontalOptions="Center" 
                 TextColor="DarkCyan"/>
        </HorizontalStackLayout>

        <Button
            x:Name="CounterBtn"
            Text="Agregar producto"
            FontSize="20"
            HorizontalOptions="Fill" BackgroundColor="DarkCyan" 
            Command="{Binding CrearProducto}"/>

        <ListView x:Name="ListaProducto"
                  RowHeight="80" 
                  ItemSelected="OnClickShowDetails"
                  ItemsSource="{Binding ListaProductos}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image  Source="data:image/png;base64,"
                                    HeightRequest="50"/>

                            <StackLayout Orientation="Vertical">

                                <Label Text="{Binding Nombre}" VerticalOptions="Start" FontSize="20" FontAttributes="Bold"/>
                                <Label Text="{Binding Cantidad}" VerticalOptions="End" FontSize="20"/>

                            </StackLayout>
                        </StackLayout>

                    </ViewCell>

                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </VerticalStackLayout>
</ContentPage>